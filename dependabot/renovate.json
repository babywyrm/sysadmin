{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":label(dependencies)",
    ":timezone(America/Los_Angeles)",
    "group:allNonMajor"
  ],

  "assignees": ["lolol"],
  "reviewers": ["lolol"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,

  "commitMessagePrefix": "chore(deps):",
  "commitBody": "Auto-generated by Renovate",

  "schedule": ["before 6am on monday"],

  "packageRules": [
    {
      "matchManagers": ["npm"],
      "groupName": "JavaScript packages",
      "labels": ["javascript", "frontend"]
    },
    {
      "matchManagers": ["pip_requirements", "poetry"],
      "groupName": "Python packages",
      "labels": ["python", "backend"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Container base images",
      "labels": ["container", "docker"]
    },
    {
      "matchManagers": ["terraform"],
      "groupName": "Terraform providers/modules",
      "labels": ["infra", "terraform"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "labels": ["ci", "github-actions"]
    },
    {
      "matchPackagePatterns": ["^alpine$"],
      "allowedVersions": ">=3.18.0",
      "description": "Ignore old Alpine versions"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch",
      "description": "Auto-merge safe dev dependency updates"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "stabilityDays": 3,
      "description": "Delay minor/patch updates to ensure stability"
    }
  ],

  "docker": {
    "fileMatch": ["(^|/|\\.)Dockerfile$"]
  },
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements.*\\.txt$"]
  },
  "terraform": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },

  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.venv/**",
    "**/__pycache__/**"
  ]
}
